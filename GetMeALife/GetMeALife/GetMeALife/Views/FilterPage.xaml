<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetMeALife.Views.FilterPage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="btnGetLife"
                    Clicked="OnGetLifeClicked"
                    Text="Get Me A Life"
                    FontSize="17"
                    HorizontalOptions="StartAndExpand">
            </Button>
            <Button x:Name="btnSuggestLife"
                    Clicked="OnSuggestLifeClicked"
                    Text="Suggest Me A Life"
                    FontSize="17"
                    HorizontalOptions="StartAndExpand">
            </Button>
            <Button x:Name="btnFindLife"
                    Clicked="OnFindLifeClicked"
                    Text="Find Me A Life"
                    FontSize="17"
                    HorizontalOptions="StartAndExpand">
            </Button>
            <Button x:Name="btnAnotherLife"
                    Clicked="OnAnotherLifeClicked"
                    Text="Another Life"
                    FontSize="17"
                    HorizontalOptions="StartAndExpand">
            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>